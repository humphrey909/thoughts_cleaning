<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
        <import type="com.example.thoughts_cleaning.views.record_problem.vm.fragment.RecordStageFragmentViewModel.RecordStageFlow" />
        <variable
            name="viewModel"
            type="com.example.thoughts_cleaning.views.record_problem.vm.fragment.RecordStageFragmentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E7E4B4"
        >

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_vertical_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_vertical_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_horizontal_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guide_horizontal_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back"
            app:layout_constraintStart_toStartOf="@+id/guide_vertical_left"
            app:layout_constraintTop_toTopOf="@+id/guide_horizontal_top"
            android:padding="5dp"
            android:scaleType="centerCrop"
            android:stateListAnimator="@null"
            android:onClick="@{() -> viewModel.onClickedBack()}"
            android:visibility="@{viewModel.currentMainFlow == viewModel._currentMainFlow.COMMON ? View.INVISIBLE : View.VISIBLE, default=visible}"
            />

        <ImageView
            android:id="@+id/dust_main_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo_icon"
            app:layout_constraintTop_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toStartOf="@+id/guide_vertical_left"
            tools:ignore="ContentDescription" />


        <TextView
            android:id="@+id/dust_main_message"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text"
            android:text="@{viewModel.dustFairyMessageText}"
            android:textSize="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/dust_main_logo"
            app:layout_constraintStart_toStartOf="@+id/dust_main_logo"
            app:layout_constraintEnd_toEndOf="@+id/guide_vertical_right"
            android:paddingHorizontal="15dp"
            android:paddingVertical="15dp"
            android:background="@drawable/message_main"
            />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@+id/guide_vertical_left"
        app:layout_constraintEnd_toEndOf="@+id/guide_vertical_right"
        app:layout_constraintTop_toBottomOf="@id/dust_main_message"
        app:layout_constraintBottom_toTopOf="@id/btn_bottom_area"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="15dp"
        >

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/pager_other_people"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layoutDirection="rtl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

<!--        <include-->
<!--            android:id="@+id/record_state_center_layout"-->
<!--            layout="@layout/cell_record_problem_center_contents"-->
<!--            android:layout_width="0dp"-->
<!--            android:layout_height="0dp"-->
<!--            app:layout_constraintHeight_percent="0.105"-->
<!--            app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            app:viewModel="@{viewModel}"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>



        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_bottom_area"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/guide_vertical_left"
            app:layout_constraintEnd_toEndOf="@+id/guide_vertical_right"
            app:layout_constraintBottom_toBottomOf="@id/guide_horizontal_bottom"
            android:layout_marginBottom="20dp"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_common"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="생각 청소 시작하기"
                android:textSize="20dp"
                android:textColor="@color/main_text"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:background="@drawable/btn_main_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:stateListAnimator="@null"
                android:onClick="@{() -> viewModel.onClicked(RecordStageFlow.STAGE_1)}"
                android:visibility="@{viewModel.currentMainFlow == viewModel._currentMainFlow.COMMON ? View.VISIBLE : View.INVISIBLE, default=invisible}"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_stage1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="나도 쓰레기 버리기"
                android:textSize="20dp"
                android:textColor="@color/main_text"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:background="@drawable/btn_main_selector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:stateListAnimator="@null"
                android:onClick="@{() -> viewModel.onClicked(RecordStageFlow.STAGE_2)}"
                android:visibility="@{viewModel.currentMainFlow == viewModel._currentMainFlow.STAGE_1 ? View.VISIBLE : View.INVISIBLE, default=invisible}"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_stage2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:textColor="@color/main_text"
            android:background="@drawable/btn_stage_selector"
            app:layout_constraintEnd_toEndOf="@id/guide_vertical_right"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:stateListAnimator="@null"
            android:onClick="@{() -> viewModel.onClicked(RecordStageFlow.STAGE_3)}"
            android:visibility="@{viewModel.currentMainFlow == viewModel._currentMainFlow.STAGE_2 ? View.VISIBLE : View.INVISIBLE, default=visible}"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>